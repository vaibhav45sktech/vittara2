generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Product {
  id          String         @id @default(cuid())
  name        String
  description String
  price       Float
  image       String
  createdAt   DateTime       @default(now())
  category    String         @default("shirt")
  ComboItem   ComboItem[]
  images      ProductImage[]
  reviews     Review[]
  variants    Variant[]
}

model ProductImage {
  id        String   @id @default(cuid())
  url       String
  order     Int      @default(0)
  productId String
  createdAt DateTime @default(now())
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
}

model Variant {
  id        String  @id @default(cuid())
  size      String
  stock     Int
  color     String
  productId String
  product   Product @relation(fields: [productId], references: [id])
}

model Review {
  id        String   @id @default(cuid())
  rating    Int
  comment   String
  productId String
  createdAt DateTime @default(now())
  product   Product  @relation(fields: [productId], references: [id])
}

model Combo {
  id          String      @id
  name        String
  description String?
  price       Int
  image       String?
  createdat   DateTime?   @default(now()) @db.Timestamptz(6)
  updatedat   DateTime?   @default(now()) @db.Timestamptz(6)
  ComboItem   ComboItem[]
}

model ComboItem {
  id        String    @id @default(dbgenerated("(gen_random_uuid())::text"))
  comboId   String?
  productId String?
  itemName  String
  itemImage String?
  itemPrice Int
  order     Int?      @default(0)
  createdat DateTime? @default(now()) @db.Timestamptz(6)
  Combo     Combo?    @relation(fields: [comboId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  Product   Product?  @relation(fields: [productId], references: [id], onDelete: NoAction, onUpdate: NoAction)
}
