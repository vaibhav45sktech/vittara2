generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String
  price       Float
  image       String
  variants    Variant[]
  reviews     Review[]
  createdAt   DateTime @default(now())
}

model Variant {
  id        String   @id @default(cuid())
  size      String
  stock     Int
  color     String
  product   Product  @relation(fields: [productId], references: [id])
  productId String
}

model Review {
  id        String   @id @default(cuid())
  rating    Int
  comment   String
  product   Product  @relation(fields: [productId], references: [id])
  productId String
  createdAt DateTime @default(now())
}
